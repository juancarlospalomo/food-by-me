<?xml version="1.0" encoding="utf-8"?>
<resources>
  <!--Text-->
  <style name="Text" parent="TextAppearance.AppCompat">
    <item name="android:textColor">@color/primary_text</item>
  </style>
  
  <style name="Text.ListItem">
  </style>
  
  <style name="Text.ListItem.Primary">
    <item name="android:textStyle">bold</item>
    <item name="android:textSize">@dimen/font_normal</item>
  </style>

  <style name="Text.ListItem.Secondary">
    <item name="android:textColor">@color/secondary_text</item>
    <item name="android:textStyle">normal</item>
    <item name="android:textSize">@dimen/font_small</item>
  </style>

  <style name="Text.ListItem.Tag">
    <item name="android:textStyle">normal</item>
    <item name="android:textSize">@dimen/font_tiny</item>
    <item name="android:textColor">@color/accent_text</item>
  </style>

  <!--Button-->
  <style name="Button">
  </style>

  <style name="Button.Favorite">
    <item name="android:layout_width">24dp</item>
    <item name="android:layout_height">24dp</item>
    <item name="android:background">@drawable/star_yellow</item>
    <item name="android:textOn"></item>
    <item name="android:textOff"></item>
  </style>
  
</resources>