<?xml version="1.0" encoding="utf-8"?>
<resources>
  <!--Text-->
  <style name="Text" parent="TextAppearance.AppCompat">
    <item name="android:textColor">@color/primary_text</item>
  </style>
  
  <style name="Text.ListItem">
  </style>
  
  <style name="Text.ListItem.Primary">
    <item name="android:textStyle">bold</item>
    <item name="android:textSize">@dimen/font_normal</item>
  </style>

  <style name="Text.ListItem.Secondary">
    <item name="android:textColor">@color/secondary_text</item>
    <item name="android:textStyle">normal</item>
    <item name="android:textSize">@dimen/font_small</item>
  </style>

  <style name="Text.ListItem.Tag">
    <item name="android:textStyle">normal</item>
    <item name="android:textSize">@dimen/font_tiny</item>
    <item name="android:textColor">@color/accent_text</item>
  </style>

  <style name="Text.Form">
    <item name="android:textSize">@dimen/font_small</item>
  </style>

  <style name="Text.Form.Label">
    <item name="android:textColor">@color/secondary_text</item>
    <item name="android:textSize">@dimen/font_small</item>
  </style>

  <style name="Text.Form.Label.Accent">
    <item name="android:textColor">@color/primary_text</item>
    <item name="android:textSize">@dimen/font_normal</item>
  </style>

  <style name="Text.Form.LabelHint">
    <item name="android:textSize">@dimen/font_small</item>
    <item name="android:textColor">@color/primary</item>
  </style>

  <!--TextView-->
  
  <style name="TextView"/>
  <style name="TextView.Form"/>
  <style name="TextView.Form.Label">
    <item name="android:layout_marginLeft">@dimen/spacing_small</item>
    <item name="android:textAppearance">@style/Text.Form.Label</item>
  </style>
  <style name="TextView.Form.Label.Accent">
    <item name="android:textAppearance">@style/Text.Form.Label.Accent</item>
    <item name="android:layout_marginBottom">@dimen/spacing_small</item>
    <item name="android:layout_marginTop">@dimen/spacing_small</item>
  </style>

  <style name="TextView.ListIndex">
    <item name="android:layout_width">20dp</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:background">@drawable/circle</item>
    <item name="android:gravity">center</item>
  </style>

  <!--Button-->
  <style name="Button">
  </style>

  <style name="Button.Favorite">
    <item name="android:layout_width">36dp</item>
    <item name="android:layout_height">36dp</item>
    <item name="android:background">@drawable/star_yellow</item>
    <item name="android:textOn"></item>
    <item name="android:textOff"></item>
  </style>
  
</resources>